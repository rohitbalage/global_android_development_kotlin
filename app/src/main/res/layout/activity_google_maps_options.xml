<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleMaps.GoogleMapsOptions">

    <!-- Title with HeadlineTextViewStyle, centered horizontally -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_maps"
        style="@style/HeadlineTextViewStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- First Button, centered horizontally -->
    <Button
        android:id="@+id/googlemapsbasics"

        android:text="@string/google_maps_operations"
        style="?attr/buttonStyle"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Second Button, centered horizontally -->
    <Button
        android:id="@+id/placesSDK"
        android:text="@string/places_sdk"
        style="?attr/buttonStyle"
        app:layout_constraintTop_toBottomOf="@+id/googlemapsbasics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/geolocationSDK"
        android:text="@string/geolocation_sdk"
        style="?attr/buttonStyle"
        app:layout_constraintTop_toBottomOf="@+id/placesSDK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
